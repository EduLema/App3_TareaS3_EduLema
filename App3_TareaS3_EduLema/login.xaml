<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3_TareaS3_EduLema.login">
    <ContentPage.Content>
        <StackLayout>

            <Entry Placeholder="Usuario" TextColor="Blue" x:Name="txtUsuario"/>
            <Entry Placeholder="Password" IsPassword="True" TextColor="Blue" x:Name="txtPassword"/>
            <Button Text="Iniciar Sesión" Clicked="Button_Clicked"/>
            <Label Text="" TextColor="Red" x:Name="lblresultado"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>