<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3_TareaS3_EduLema.Parcial2">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Parcial 2" VerticalOptions="Center" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtnotaDos"  Keyboard="Numeric" Placeholder="Nota Seguimiento 2:" FontSize="12"/>
            <Entry x:Name="txtexamen2" Keyboard="Numeric" Placeholder="Examen2:" FontSize="12"/>
            <Label Text="Nota Parcial 2" FontSize="12"/>
            <Entry x:Name="txtnota2" IsReadOnly="True" FontSize="12"/>

            <Button x:Name="btnCalculo2"  Text="Calcular" Clicked="btnCalculo2_Clicked" FontSize="12"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>