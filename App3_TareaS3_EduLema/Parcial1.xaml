<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3_TareaS3_EduLema.Parcial1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="PARCIAL 1" TextColor="red" VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <Entry x:Name="txtnotaUno" Keyboard="Numeric" Placeholder="Nota Seguimiento 1" FontSize="12"/>
            <Entry x:Name="txtexamen1" Keyboard="Numeric" Placeholder="Examen 1:" FontSize="12" />

            <Label Text="Nota Parcial 1" FontSize="12"/>
            <Entry x:Name="txtnota1" IsReadOnly="True" FontSize="12"/>

            <Button x:Name="btnCalculo" Text="CALCULAR" Clicked="btnCalculo_Clicked" FontSize="18"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>